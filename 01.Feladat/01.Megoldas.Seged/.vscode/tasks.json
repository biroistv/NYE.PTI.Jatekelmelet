{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "seged",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++1z",

                "-o",
                "${workspaceFolder}/main.out",

                "-g",
                "${workspaceFolder}/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}